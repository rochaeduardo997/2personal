{
  "compilerOptions": {
      "incremental": true,                         
      "target": "es2016",                          
      "module": "commonjs",                        
      "moduleResolution": "node",                  
      "resolveJsonModule": true,                   
      "sourceMap": true,                           
      "outDir": "./dist",                          
      "esModuleInterop": true,                     
      "forceConsistentCasingInFileNames": true,    
      "strict": true,                              
      "allowUnreachableCode": false,               
      "skipLibCheck": true                         
    },
  "include": ["src", "test"]
}
